!!! XML
!!!
%html
  %head
    %meta{"http-equiv" => 'X-UA-Compatible', :content => 'GROW UP'}
    %meta{:name => 'viewport', :content => 'width=850'}
    %title
      GusG.us
      = @renderable.title
    %link{:href => "/images/gusgus_icon.gif", :rel => "icon"}
    %link{:type => 'application/rss+xml', :href => url_to('/feed.xml'), :title => 'GusG.us', :rel => 'alternate'}
    %link{:href => "/reset-min.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/application.css", :rel => "stylesheet", :type => "text/css"}
  %body
    #container
      #header
        %a{:href => "http://gusg.us"}
          %img{:src => "/images/gus-logo.png"}
        %span.nav
          %a{:href => "/"} Home
          %a{:href => "/life"} Life
          %a{:href => "/work"} Work
          %a{:href => "/code"} Code
          %a{:href => "/code/ruby"} Ruby
          %a{:href => "/code/erlang"} Erlang
        %a{:href => "/feed.xml"}
          %img{:src => "/images/feed.gif"}
      #articles
        = yield
      #footer.clear
        &copy; 2007 -
        = Time.now.year
        Justin Knowlden,
        %span.email gus at gusg dot us
        %span.powered
          \- Powered by
          %a{:href => "http://sinatra.rubyforge.org/"} Sinatra
          ,
          %a{:href => "http://haml.hamptoncatlin.com/"} HAML
          ,
          %a{:href => "http://rubyforge.org/projects/syntaxi/"} Syntaxi
          , and me